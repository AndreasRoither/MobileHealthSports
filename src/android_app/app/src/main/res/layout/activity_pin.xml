                app:iconGravity="textStart"
                app:layout_column="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="2"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('0')}"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="3"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.deleteLastEntry()}"
                android:padding="0dp"
                android:text="Del"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="3"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />


        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@{viewModel.titleText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Enter PIN" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@{viewModel.bottomText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            tools:text="Forgot PIN?" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>