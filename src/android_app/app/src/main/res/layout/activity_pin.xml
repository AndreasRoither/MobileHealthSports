<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mobilehealthsports.vaccinepass.ui.pin.PinViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:context=".ui.pin.PinActivity"
        android:background="@color/app_background">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:visibility="visible"
            app:columnCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:rowCount="4">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('1')}"
                android:padding="0dp"
                android:text="1"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />


            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('2')}"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('3')}"
                android:padding="0dp"
                android:text="3"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('4')}"
                android:padding="0dp"
                android:text="4"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="1"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('5')}"
                android:padding="0dp"
                android:text="5"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="1"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('6')}"
                android:padding="0dp"
                android:text="6"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="1"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('7')}"
                android:padding="0dp"
                android:text="7"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="2"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:onClick="@{() -> viewModel.onPin('8')}"
                android:padding="0dp"
                android:text="8"
                android:textColor="@color/black"
                app:iconGravity="textStart"
                app:layout_column="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="2"
                app:rippleColor="@color/app_primary"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.VaccinePass.Button.Rounded"
                app:strokeColor="@color/app_primary" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="70dp"
