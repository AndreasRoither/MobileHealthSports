<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.VaccinePass.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PinButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/activity_pin_btn_width</item>
        <item name="android:layout_height">@dimen/activity_pin_btn_height</item>
        <item name="android:layout_margin">@dimen/activity_pin_btn_margin</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.VaccinePass.Rounded</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="RoundView">
        <item name="tint">?colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.VaccinePass.Rounded</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>