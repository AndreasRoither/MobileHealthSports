<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="VaccinePass_purple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_purple</item>
        <item name="colorPrimaryVariant">@color/app_light_purple</item>
        <item name="colorPrimaryDark">@color/app_dark_purple</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- to circumvent flashes -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Orange application theme. -->
    <style name="VaccinePass_orange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_orange</item>
        <item name="colorPrimaryVariant">@color/app_light_orange</item>
        <item name="colorPrimaryDark">@color/app_dark_orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Green application theme. -->
    <style name="VaccinePass_green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/app_light_green</item>
        <item name="colorPrimaryDark">@color/app_dark_green</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VaccinePass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VaccinePass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>